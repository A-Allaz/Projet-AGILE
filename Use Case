@startuml
left to right direction
actor User as D
actor System as S

rectangle "Delivery System" {
    D --> (Load Map)
    D --> (Change the Number of Couriers)
    D --> (Receives a New Delivery Request)
    D --> (Select a Courier)
    D --> (Create Delivery Request, the location of the pickup and the location of the delivery)
    S --> (Compute the Best Possible Tour)
    
    D --> (Save Tour)
    D --> (Restore Tour)

    (Compute the Best Possible Tour) --> (Ask the User to Select another Courier) : <<extend>>
    (Ask the User to Select another Courier) --> (Reject the Tour) : <<extend>>
}
@enduml
